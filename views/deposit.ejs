<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>deposit</title>
    <link rel="stylesheet" href="/stylesheets/deposit.css" type="text/css">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>
<body>
<!-- 이미지 삽입 영역 -->
<div class="cover">
    <!-- 메뉴바 + 전체 내용 -->
    <div class="wrapper">
        <!-- 내용 -->
        <div class="content">
            <!-- 제목 -->
            <h1 class="texts">한눈에 보이는 회비관리</h1>
            <!-- 설명 -->
            <div class="desc">
                실시간으로 자신의 회비를 확인하세요!
            </div>
            <!-- 입력, 버튼 창 -->
            <div class="downloads">
                <input type="number" placeholder="납부할 금액" id="money">
                <button type="submit" onclick="button_click()">금액 납부하기</button>
            </div>
        </div>
    </div>
</div>
<script>
    function button_click() {
        var money = document.getElementById("money").value;

        <!-- 비 정상적인 입금일 경우 -->
        if(money < 1000) swal("입금 금액이 너무 작아요!", "", "error")
        else if(money >= 1000000) swal("입금 금액이 너무 많아요!", "", "error");

        <!-- 정상적인 값이 들어왔을 경우 -->
        else{
            <!-- 입금 여부 confirm창 -->
            var check = swal({
                title: money + "원 입금 할래요?",
                icon: "warning",
                buttons: true,
            }) .then(function(check){ <!-- 동기식 : 확인창을 수행 후 밑을 수행 -->
                if(check) swal("입금 성공!", "", "success");
                else swal("입금 취소!", "", "error");
            })
        }
    }
</script>
</body>
</html>